{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Currency & Company Data{% endblock %}

{% block stylesheets %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="text-center mb-4">Currency & Company Data</h2>

        <div class="text-right mb-3">
            <a href="{{ path('sync_currency_rates') }}" class="btn btn-primary">Sync Rates</a>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0">Currencies</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Currency</th>
                        <th>Symbol</th>
                        <th>Rate</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for currency in currencies %}
                        <tr>
                            <td>{{ currency.name }}</td>
                            <td>{{ currency.symbol }}</td>
                            <td>{{ currency.exchange_rate }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">No data available</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Companies</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Company</th>
                        <th>Stock Price</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for company in companies %}
                        <tr>
                            <td>{{ company.name }}</td>
                            <td>{{ company.code }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2" class="text-center">No data available</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {# Optionally include Bootstrap JS and dependencies #}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}
